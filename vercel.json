{
  "rewrites": [
    {
      "source": "/api/auth/signup",
      "destination": "/api/auth/signup"
    },
    {
      "source": "/api/(.*)",
      "destination": "https://jobspeak-backend-production.up.railway.app/api/$1"
    },
    {
      "source": "/voice/(.*)",
      "destination": "https://jobspeak-backend-production.up.railway.app/voice/$1"
    },
    {
      "source": "/ai/(.*)",
      "destination": "https://jobspeak-backend-production.up.railway.app/ai/$1"
    },
    {
      "source": "/resume/(.*)",
      "destination": "https://jobspeak-backend-production.up.railway.app/resume/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}